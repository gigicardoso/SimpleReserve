<link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700&display=swap" rel="stylesheet">
<div id="bodyCadastroUsuarios" style="font-family: 'Poppins', sans-serif;">
  <div class="login-container cadastro-container">
    <div class="login-box">
      <div class="logo">
        <img src="./images/logoLogin.png" alt="Simple Reserve Logo" class="logofoto">
      </div>
      <br>
      <h2 class="bemvindo">Cadastre-se</h2>

      <form id="cadastro-form" method="POST" action="/cadastrousuario">
        <div class="input-group">
          <input type="text" placeholder="Digite seu nome completo" name="nome" required>
        </div>

        <div class="input-group">
          <input type="email" placeholder="Digite seu e-mail" name="email" required>
        </div>

        <div class="input-group">
          <input type="password" placeholder="Digite sua senha" name="senha" required>
        </div>

        <div class="input-group">
          <input type="password" placeholder="Confirme sua senha" name="senha2" required>
        </div>

        <!-- Campo de permissão removido do cadastro público -->

        <button type="submit" class="btn-cadastrar">Cadastrar</button>

        <div class="links">
          <p class="textoVerdeLogin">ou</p>
          <a href="/">Já tem conta? Faça login</a>
        </div>
      </form>
    </div>
  </div>
</div>
<script src="script.js"></script>
