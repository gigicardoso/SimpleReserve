<!-- Modal de Detalhes do Evento -->
<link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;500;600&display=swap" rel="stylesheet">
<div class="modal fade" id="eventDetailsModal" tabindex="-1" aria-labelledby="eventDetailsModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="eventDetailsModalLabel" style="color: #84925b; font-family: 'Poppins', sans-serif;">Detalhes do Evento</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Fechar"></button>
      </div>
      <div class="modal-body" style="font-family: 'Poppins', sans-serif;">
        <div class="mb-2"><strong>Nome do Evento:</strong> <span id="modal-event-title"></span></div>
        <div class="mb-2"><strong>Sala:</strong> <span id="modal-event-sala"></span></div>
        <div class="mb-2"><strong>Data:</strong> <span id="modal-event-date"></span></div>
        <div class="mb-2"><strong>Horário:</strong> <span id="modal-event-time"></span></div>
        <div class="mb-2"><strong>Descrição:</strong> <span id="modal-event-desc"></span></div>
      </div>
      <div class="modal-footer actions-flex" style="width: 100%; justify-content: center;">
        <button type="button" class="btn-action btn-delete" id="modal-delete-btn">
          <i class="fa fa-trash-alt"></i>
          <span class="btn-text">Excluir</span>
        </button>
        <button type="button" class="btn-action btn-edit" id="modal-edit-btn">
          <i class="fa fa-edit"></i>
          <span class="btn-text">Editar</span>
        </button>
      </div>
      <style>
        .actions-flex {
          display: flex;
          gap: 12px;
          align-items: center;
          justify-content: center;
          width: 100%;
        }
        .actions-flex .btn-action {
          width: 110px;
          justify-content: center;
        }
        .btn-action {
          padding: 6px 12px;
          border-radius: 6px;
          cursor: pointer;
          font-size: 13px;
          font-weight: 500;
          font-family: 'Poppins', sans-serif;
          transition: all 0.2s;
          display: flex;
          align-items: center;
          gap: 6px;
          text-decoration: none !important;
          outline: none;
          border: none;
        }
        .btn-action:hover,
        .btn-action:focus,
        a.btn-action,
        a.btn-action:hover,
        a.btn-action:focus {
          text-decoration: none !important;
        }
        .btn-action .btn-text { text-decoration: none !important; }
        .btn-action i {
          font-size: 13px;
        }
        .btn-edit {
          background-color: rgba(255, 152, 0, 0.1);
          color: var(--warning-color, #ff9800);
          border: 1px solid rgba(255, 152, 0, 0.3);
        }
        .btn-edit:hover {
          background-color: rgba(255, 152, 0, 0.2);
          color: var(--warning-color, #ff9800);
        }
        .btn-delete {
          background-color: rgba(244, 67, 54, 0.1);
          color: var(--error-color, #f44336);
          border: 1px solid rgba(244, 67, 54, 0.3);
        }
        .btn-delete:hover {
          background-color: rgba(244, 67, 54, 0.2);
          color: var(--error-color, #f44336);
        }
        /* Ajusta o btn-close para manter a aparência padrão do Bootstrap */
        .btn-close {
          opacity: 0.8 !important;
        }
        .btn-close:hover {
          opacity: 1 !important;
        }
        .btn-close:focus {
          outline: 2px solid #84925b;
          box-shadow: 0 0 0 0.25rem rgba(132, 146, 91, 0.25);
        }
      </style>
    </div>
  </div>
</div>
