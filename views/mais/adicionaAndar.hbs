<div class="container py-4">
  <div class="row justify-content-center">
    <div class="col-12 col-md-8 col-lg-6">
      <div class="card shadow">
        <div class="card-header bg-success text-white d-flex align-items-center">
          <h2 class="mb-0"><i class="fas fa-layer-group me-2"></i> Cadastrar Novo Andar</h2>
        </div>
        <div class="card-body">
          <form id="andarForm" action="/andar" method="POST">
            <div class="mb-3">
              <label for="descricao" class="form-label">Nome do Andar</label>
              <input
                type="text"
                id="descricao"
                name="descricao"
                class="form-control"
                required
                placeholder="Ex: Andar 1, 2, 3..."
              />
            </div>
            <div class="mb-3">
              <label for="id_bloco" class="form-label">Bloco</label>
              <select id="id_bloco" name="id_bloco" class="form-control" required>
                <option value="">Selecione um bloco</option>
                {{#each blocos}}
                  <option value="{{this.id_bloco}}">{{this.descricao}}</option>
                {{/each}}
              </select>
            </div>
            <button type="submit" class="btn btn-success w-100">
              <i class="fas fa-save me-2"></i>
              Cadastrar Andar
            </button>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>

