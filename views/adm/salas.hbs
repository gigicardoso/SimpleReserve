<script>
document.addEventListener('DOMContentLoaded', function() {
	document.querySelectorAll('.btn-delete').forEach(function(btn) {
		btn.addEventListener('click', function(e) {
			if (!window.confirm('Tem certeza que quer excluir?')) {
				e.preventDefault();
			}
		});
	});
});
</script>
<div class="container">
	<div class="header">
		<div class="title-container">
			<h1><i class="fas fa-door-open"></i> Gerenciador de Salas</h1>
			{{#if podeGerenciarSala}}
				<a href="/mais/adicionasala" class="btn-add" id="btnAddSala" title="Adicionar sala" style=" text-decoration: none;">
					<i class="fas fa-plus"></i>
				</a>
			{{else}}
				<a href="#" class="btn-add" id="btnAddSalaBlocked" title="Sem permissão" style=" text-decoration: none; opacity: .5; cursor: not-allowed;">
					<i class="fas fa-plus"></i>
				</a>
			{{/if}}
		</div>
	</div>
	<p style="text-align:center;">Aqui vai ser o gerenciador de salas</p>
</div>
<script>
	document.addEventListener('DOMContentLoaded', function() {
		var blocked = document.getElementById('btnAddSalaBlocked');
		if (blocked) {
			blocked.addEventListener('click', function(e) {
				e.preventDefault();
				alert('Você não tem permissão para cadastrar salas.');
			});
		}
	});
</script>