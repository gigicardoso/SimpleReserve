<div class="container">
  <div class="header">
    <div class="title-container">
      <h1><i class="fas fa-building"></i> Gerenciador de tipo de mesa</h1>
        <a href="mais/adicionaMesa" class="btn-add" id="btnAddMesa" title="Adicionar tipo mesa">
          <button class="btn-add" id="btnAddTipoMesa" title="Adicionar tipo de mesa">
            <i class="fas fa-plus"></i>
          </button>
      </a>
    </div>
  </div>
  <div class="user-table-container">
    <table class="user-table">
      <thead>
        <tr>
          <th>Descrição do Tipo</th>
          <th>Ações</th>
        </tr>
      </thead>
      <tbody>
        {{#if mesas.length}}
          {{#each mesas}}
            <tr>
              <td>{{this.descricao}}</td>
              <td class="actions">
               <a href="editarMesa/{{id_mesa}}" class="btn-action btn-edit">
                            <i class="fas fa-edit"></i>
                            <span>Editar</span>
                        </a>
                        <a href="excluirMesa/{{id_mesa}}" class="btn-action btn-delete" >
                            <i class="fas fa-trash-alt"></i>
                            <span>Excluir</span>
                        </a>
              </td>
            </tr>
          {{/each}}
        {{else}}
          <tr class="empty-message-row">
            <td colspan="2" class="empty-message">
              Nenhum tipo de mesa cadastrado. Clique no botão
              <i class="fas fa-plus"></i>
              para adicionar.
            </td>
          </tr>
        {{/if}}
      </tbody>
    </table>
  </div>
</div>



