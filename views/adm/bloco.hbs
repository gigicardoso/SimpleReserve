<script>
document.addEventListener('DOMContentLoaded', function() {
  document.querySelectorAll('.btn-delete').forEach(function(btn) {
    btn.addEventListener('click', function(e) {
      if (!window.confirm('Tem certeza que quer excluir?')) {
        e.preventDefault();
      }
    });
  });
});
</script>
<nav class="breadcrumb-nav">
  <ol class="breadcrumb-list">
    <li class="breadcrumb-item"><a href="/adm">Gerenciador ADM</a></li>
    <span class="breadcrumb-separator"> &gt; </span>
    <li class="breadcrumb-item"><a href="/bloco">Gerenciador de blocos</a></li>
  </ol>
</nav>
<div class="container">
  <div class="header">
    <div class="title-container">
      <h1><i class="fas fa-building"></i> Gerenciador de Blocos</h1>
        <a href="/adicionabloco" class="btn-add" id="btnAddBloco" title="Adicionar bloco">
          <button class="btn-add" id="btnAddBloco" title="Adicionar bloco">
            <i class="fas fa-plus"></i>
          </button>
      </a>

    </div>
  </div>
  <div class="user-table-container">
    <table class="user-table">
      <thead>
        <tr>
          <th>Nome do Bloco</th>
          <th>Ações</th>
        </tr>
      </thead>
      <tbody>
        {{#if blocos.length}}
          {{#each blocos}}
            <tr>
              <td>{{this.descricao}}</td>
              <td class="actions">
                <a href="editarBloco/{{id_bloco}}" class="btn-action btn-edit">
                            <i class="fas fa-edit"></i>
                            <span>Editar</span>
                        </a>
                        <a href="excluirBloco/{{id_bloco}}" class="btn-action btn-delete" >
                            <i class="fas fa-trash-alt"></i>
                            <span>Excluir</span>
                        </a>
              </td>
            </tr>
          {{/each}}
        {{else}}
          <tr class="empty-message-row">
            <td colspan="2" class="empty-message">
              Nenhum bloco cadastrado. Clique no botão
              <i class="fas fa-plus"></i>
              para adicionar.
            </td>
          </tr>
        {{/if}}
      </tbody>
    </table>
  </div>
</div>

