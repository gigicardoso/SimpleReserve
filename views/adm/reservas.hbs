<div class="container">
	<div class="header">
		<div class="title-container">
			<h1><i class="bi bi-calendar-check"></i> Gerenciador de Reservas</h1>
		</div>
	</div>
	<div class="user-table-container">
		<table class="user-table">
			<thead>
				<tr>
					<th>Usuário</th>
					<th>Sala</th>
					<th>Data</th>
					  <th>Horário</th>
							</tr>
			</thead>
			<tbody>
  {{#each reservas}}
    <tr>
      <td>{{this.nomeUsuario}}</td>
      <td>{{this.nomeSala}}</td>
      <td>{{formatarData this.dataReserva}}</td>
      <td>{{this.horaInicio}} - {{this.horaFim}}</td>
    </tr>
  {{else}}
    <tr><td colspan="4">Nenhuma reserva encontrada.</td></tr>
  {{/each}}
</tbody>
		</table>
	</div>
</div>

<link rel="stylesheet" href="/stylesheets/usuariosAdm.css">
