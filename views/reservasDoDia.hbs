<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
<link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;500;600&display=swap" rel="stylesheet">
<style>
.user-table thead th { 
	font-family: 'Poppins', sans-serif !important; 
	font-size: 14px;
}
.user-table tbody td {
	font-size: 15px;
}
.actions-flex {
    display: flex;
    gap: 12px;
    align-items: center;
    justify-content: center;
    width: 100%;
}
.actions-flex .btn-action {
	width: 90px;
	justify-content: center;
}
.btn-action {
	padding: 6px 12px;
	border-radius: 6px;
	cursor: pointer;
	font-size: 13px;
	font-weight: 500;
	transition: all 0.2s;
	display: flex;
	align-items: center;
	gap: 6px;
	text-decoration: none;
	outline: none;
	border: none;
}
.btn-action:hover { 
	text-decoration: none;
}
.btn-action:focus {
	text-decoration: none;
}
.btn-action span {
	text-decoration: none;
}
.btn-action i {
	font-size: 13px;
}
.btn-edit {
	background-color: rgba(255, 152, 0, 0.1);
	color: var(--warning-color);
	border: 1px solid rgba(255, 152, 0, 0.3);
}
.btn-edit:hover {
	background-color: rgba(255, 152, 0, 0.2);
	color: var(--warning-color);
}
.btn-delete {
	background-color: rgba(244, 67, 54, 0.1);
	color: var(--error-color);
	border: 1px solid rgba(244, 67, 54, 0.3);
}
.btn-delete:hover {
	background-color: rgba(244, 67, 54, 0.2);
	color: var(--error-color);
}
@media (max-width: 768px) {
	.btn-action {
		padding: 6px 10px;
		font-size: 13px;
	}
    .btn-action i {
        display: none;
    }
}
</style>
<div class="container">
	<div class="header">
		<div class="title-container">
			<h1><i class="bi bi-list-check"></i> Minhas Reservas do Dia</h1>
		</div>
	</div>
	<div class="user-table-container">
		<table class="user-table">
			<thead>
				<tr>
					<th>Nome do Evento</th>
					<th>Sala</th>
					<th>Data</th>
					<th>Horário</th>
					<th>Ações</th>
				</tr>
			</thead>
			<tbody>
				{{#each reservas}}
					<tr>
						<td>{{this.nome_evento}}</td>
						<td>{{this.sala.nome_salas}}</td>
						<td>{{formatarData this.data}}</td>
						<td>{{formatarHora this.hora_inicio}} - {{formatarHora this.hora_final}}</td>
						<td>
							<div class="actions-flex" style="width: 100%; justify-content: center;">
								<a href="/reservas/editar/{{this.id_agenda}}" class="btn-action btn-edit">
									<i class="fa fa-edit"></i>
									<span class="btn-text">Editar</span>
								</a>
								<button type="submit" form="form-excluir-{{this.id_agenda}}" class="btn-action btn-delete" onclick="return confirm('Deseja apagar esta reserva?')">
									<i class="fa fa-trash-alt"></i>
									<span class="btn-text">Excluir</span>
								</button>
								<form id="form-excluir-{{this.id_agenda}}" action="/agenda/excluir/{{this.id_agenda}}" method="GET" style="display:none;"></form>
							</div>
						</td>
					</tr>
				{{else}}
					<tr><td colspan="5">Nenhuma reserva encontrada para hoje.</td></tr>
				{{/each}}
			</tbody>
		</table>
	</div>
</div>
<link rel="stylesheet" href="/stylesheets/usuariosAdm.css">